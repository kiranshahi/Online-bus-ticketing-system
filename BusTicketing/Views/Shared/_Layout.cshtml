<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <link rel="shortcut icon" href="assets/images/favicon_1.ico">

    <title>@ViewBag.Title - Bus Ticketing</title>

    <!--Morris Chart CSS -->
    <link rel="stylesheet" href="~/Scripts/plugins/morris/morris.css">

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/sweet-alert.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/css/bootstrap-editable.css" rel="stylesheet">

    @Styles.Render("~/toastr/css")
    <script src="~/Scripts/js/modernizr.min.js"></script>
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/sweet-alert.min.js"></script>
    @Scripts.Render("~/bundles/toastr")
</head>


<body class="fixed-left">

    <!-- Top Bar Start -->
    <div class="topbar">

        <!-- LOGO -->
        <div class="topbar-left">
            <div class="text-center">
                <a href="#" class="logo"><i class="icon-magnet icon-c-logo"></i><span>Bus Ticketing</span></a>
            </div>
        </div>

        <!-- Button mobile view to collapse sidebar menu -->
        <div class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="">
                    <div class="pull-left">
                        <button class="button-menu-mobile open-left">
                            <i class="ion-navicon"></i>
                        </button>
                        <span class="clearfix"></span>
                    </div>
                    <ul class="nav navbar-nav navbar-right pull-right">
                        <li class="dropdown">
                            <a href="" class="dropdown-toggle profile" data-toggle="dropdown" aria-expanded="true"><img src="@Url.Action("GetUserImage", "User", new { id = Filters.AuthenticationModel.GlobalUser.getGlobalUser().Id })" alt="user-img" class="img-circle"> </a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("UserProfile", "User")"><i class="fa fa-lock m-r-5"></i>My Profile</a></li>
                                <li><a href="@Url.Action("LogOff", "Account")"><i class="ti-power-off m-r-5"></i> Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <!-- Top Bar End -->
    <!-- Begin page -->
    <div id="wrapper">

        <!-- ========== Left Sidebar Start ========== -->

        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">
                <!--- Divider -->
                <div id="sidebar-menu">
                    <!-- Menu List -->
                    <ul>
                        <li class="text-muted menu-title">Navigation</li>

                        <li>
                            <a href="@Url.Action("Index","Dashboard")" class="waves-effect active"><i class="ti-home"></i> <span> Dashboard </span> </a>
                        </li>

                        @if ((Common.GlobalMethods.Enumerators.UserRole)Filters.AuthenticationModel.GlobalUser.getGlobalUser().UserType == Common.GlobalMethods.Enumerators.UserRole.Admin)
                        {
                            <li>
                                <a href="@Url.Action("Index","User")" class="waves-effect"><i class="ti-user"></i> <span> Users </span> </a>
                            </li>
                        }


                        <li class="has_sub">
                            <a href="#" class="waves-effect"><i class="ti-settings"></i><span> Setup </span></a>
                            <ul class="list-unstyled">
                                @if ((Common.GlobalMethods.Enumerators.UserRole)Filters.AuthenticationModel.GlobalUser.getGlobalUser().UserType == Common.GlobalMethods.Enumerators.UserRole.Admin) 
                                {
                                    <li><a href="@Url.Action("Index","Travel")"> Travel </a></li>
                                }
                                <li><a href="@Url.Action("Index","Bus")"> Bus </a></li>
                                <li><a href="@Url.Action("Index","Route")"> Route </a></li>
                            </ul>
                        </li>

                        <li>
                            <a href="@Url.Action("Index","Schedule")" class="waves-effect"><i class="ti-calendar"></i> <span> Schedule Bus </span> </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","UserBooking")" class="waves-effect"><i class="ti-time"></i> <span> User Booking </span> </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">
                    @RenderBody()
                </div> <!-- container -->

            </div> <!-- content -->
        </div>
    </div>
    <!-- END wrapper -->
    @*<Success or Failure Messages>*@
    <input id="hdn-successMsg" type="hidden" value="@TempData["Success"]" />
    <input id="hdn-isSuccessMsg" type="hidden" value="@TempData["isSuccess"]" />
    @*<Success or Failure Messages>*@

    <script src="~/Scripts/CustomJavascripts/Layout.js"></script>
    <script>
        var resizefunc = [];
    </script>

    <!-- jQuery  -->
    <script src="~/Scripts/js/detect.js"></script>
    <script src="~/Scripts/js/fastclick.js"></script>
    <script src="~/Scripts/js/jquery.slimscroll.js"></script>
    <script src="~/Scripts/js/jquery.blockUI.js"></script>
    <script src="~/Scripts/js/waves.js"></script>
    <script src="~/Scripts/js/wow.min.js"></script>
    <script src="~/Scripts/js/jquery.nicescroll.js"></script>
    <script src="~/Scripts/js/jquery.scrollTo.min.js"></script>

    <script src="~/Scripts/plugins/peity/jquery.peity.min.js"></script>

    <!-- jQuery  -->
    <script src="~/Scripts/plugins/waypoints/lib/jquery.waypoints.js"></script>
    <script src="~/Scripts/plugins/counterup/jquery.counterup.min.js"></script>



    <script src="~/Scripts/plugins/morris/morris.min.js"></script>
    <script src="~/Scripts/plugins/raphael/raphael-min.js"></script>

    <script src="~/Scripts/plugins/jquery-knob/jquery.knob.js"></script>

    <script src="~/Scripts/pages/jquery.dashboard.js"></script>

    <script src="~/Scripts/js/jquery.core.js"></script>
    <script src="~/Scripts/js/jquery.app.js"></script>
    <script type="text/javascript" src="~/Scripts/js/bootstrap-editable.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/jquery.xeditable.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $('.counter').counterUp({
                delay: 100,
                time: 1200
            });

            $(".knob").knob();
        });
    </script>
</body>
</html>