@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <link rel="shortcut icon" href="assets/images/favicon_1.ico">

    <title>@ViewBag.Title - Bus Ticketing</title>

    <!--Morris Chart CSS -->
    <link rel="stylesheet" href="~/Scripts/plugins/morris/morris.css">

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/sweet-alert.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/css/bootstrap-editable.css" rel="stylesheet">

    @Styles.Render("~/toastr/css")
    <script src="~/Scripts/js/modernizr.min.js"></script>
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/sweet-alert.min.js"></script>
    @Scripts.Render("~/bundles/toastr")
</head>
<body>

    <div class="account-pages"></div>
    <div class="clearfix"></div>

    <div class="wrapper-page">
        <div class="ex-page-content text-center">            
            <h2>Welcome !!</h2><br>
            <p class="text-muted">Thank you for siging into Bus Ticketing.</p>
            <br>
            <a class="btn btn-default waves-effect waves-light" href="~/"> Return Home</a>

        </div>
    </div>


    <!-- jQuery  -->
    <script src="~/Scripts/js/detect.js"></script>
    <script src="~/Scripts/js/fastclick.js"></script>
    <script src="~/Scripts/js/jquery.slimscroll.js"></script>
    <script src="~/Scripts/js/jquery.blockUI.js"></script>
    <script src="~/Scripts/js/waves.js"></script>
    <script src="~/Scripts/js/wow.min.js"></script>
    <script src="~/Scripts/js/jquery.nicescroll.js"></script>
    <script src="~/Scripts/js/jquery.scrollTo.min.js"></script>

    <script src="~/Scripts/plugins/peity/jquery.peity.min.js"></script>

    <!-- jQuery  -->
    <script src="~/Scripts/plugins/waypoints/lib/jquery.waypoints.js"></script>
    <script src="~/Scripts/plugins/counterup/jquery.counterup.min.js"></script>



    <script src="~/Scripts/plugins/morris/morris.min.js"></script>
    <script src="~/Scripts/plugins/raphael/raphael-min.js"></script>

    <script src="~/Scripts/plugins/jquery-knob/jquery.knob.js"></script>

    <script src="~/Scripts/pages/jquery.dashboard.js"></script>

    <script src="~/Scripts/js/jquery.core.js"></script>
    <script src="~/Scripts/js/jquery.app.js"></script>
    <script type="text/javascript" src="~/Scripts/js/bootstrap-editable.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/jquery.xeditable.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $('.counter').counterUp({
                delay: 100,
                time: 1200
            });

            $(".knob").knob();
        });
    </script>

</body>
</html>