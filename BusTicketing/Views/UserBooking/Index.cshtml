@model IEnumerable<BusTicketing.Models.BookSeatViewModel>
@{
    ViewBag.Title = "User Booking";
}


<div class="row">
    <div class="col-sm-12">       
        <h2>User Booking List</h2>
    </div>
</div>
<link href="~/Scripts/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/plugins/datatables/dataTables.bootstrap.js"></script>
<div class="row">
    <div class="col-sm-12">
        <div class="panel">
            <div class="panel-body">
                <div class="">
                    <table id="datatable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>S. No.</th>
                                <th>User</th>
                                <th>Contact</th>
                                <th>Address</th>
                                <th>Bus</th>
                                <th>Departure</th>
                                <th>Booked Seats</th>
                                <th>Booked Date</th>
                                <th>Amount Paid</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var index = 0;
                                foreach (var bus in Model)
                                {
                                    <tr>
                                        <th scope="row">@(index + 1)</th>
                                        <td>@bus.UserName</td>
                                        <td>@bus.Contact</td>
                                        <td>@bus.Address</td>
                                        <td>@bus.Bus_No</td>
                                        <td>@bus.Departure</td>
                                        <td>@bus.BookedSeat</td>
                                        <td>@bus.BookedDate.ToShortDateString()</td>
                                        <td>@bus.AmountPaid</td>
                                    </tr>
                                    index++;
                                }
                            }
                        </tbody>

                    </table>





                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#datatable').dataTable();
    });
</script>




